  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "bun src/main.ts",
    "start:dev": "bun --hot src/main.ts",
    "start:debug": "bun --debug --watch src/main.ts",
    "generate:resource": "nest g resource",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "bun test --env-file .env.dev.local",
    "test:watch": "bun test --watch",
    "test:cov": "bun test --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "bun test ./test/*.e2e-spec.ts*",
    // "_migrate:dev": "bunx prisma migrate dev",
    // "migrate:dev": "bun run --env-file .env.dev.local _migrate:dev",
    // "_migrate:dev:create": "bunx prisma migrate dev --create-only",
    // "migrate:dev:create": "bun run --env-file .env.dev.local _migrate:dev:create",
    // "migrate:deploy": "bunx prisma migrate deploy",
    // "prisma:generate": "bunx prisma generate",
    // "prisma:studio": "bunx prisma studio",
    // "_prisma:seed": "bunx prisma db seed",
    // "prisma:seed": "bun run --env-file .env.dev.local _prisma:seed",
    "docker:build": "docker build -t api-gateway .",
    "podman:build": "podman build -t api-gateway .",
    "docker:build:dev": "docker build -f Containerfile.dev -t api-gateway:dev .",
    "podman:build:dev": "podman build -f Containerfile.dev -t api-gateway:dev .",
    "container:exec": "podman exec -it",
    "container:exec:api": "bun run container:exec nest-api-dev"
    // "container:exec:postgres": "bun run container:exec nest-postgres-dev",
    // "compose": "podman compose",
    // "compose:dev": "podman compose -f docker-compose.dev.yml",
    // "compose:logs": "bun run compose logs -f",
    // "compose:logs:dev": "bun run compose:dev logs -f"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
